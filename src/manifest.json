{
  "{{chrome}}.manifest_version": 3,
  "{{firefox}}.manifest_version": 2,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "128": "icon/128.png"
  },
  "background": {
    "{{chrome}}.service_worker": "src/service_worker.ts",
    "{{firefox}}.scripts": ["src/service_worker.ts"],
    "{{firefox}}.persistent": false
  },
  "commands": {
    "Initial capture": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Initial screenshot"
    },
    "Capture changes": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Capture flipped cards"
    }
  },
  "permissions": [
    "activeTab"
  ],
  "{{chrome}}.action": {
    "default_title": "Idleon Wisdom Helper"
  },
  "{{firefox}}.browser_action": {
    "default_title": "Idleon Wisdom Helper"
  },
  "content_scripts": [
    {
      "matches": ["https://*.legendsofidleon.com/*", "https://legendsofidleon.com/*", "http://localhost/*"],
      "run_at": "document_start",
      "js": ["src/content_script.ts"]
    }
  ]
}
